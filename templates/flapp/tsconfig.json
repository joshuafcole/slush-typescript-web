{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",

    "lib": ["dom", "ES2015"],
    "module": "commonjs",
    "target": "ES2015"
  },
  "include": ["./src/typings/**/*.d.ts", "./src/**/*.ts", "./test/**/*.ts"]
}
