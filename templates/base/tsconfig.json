{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es5"
  },
  "include": ["./src/typings/**/*.d.ts", "./src/**/*.ts", "./test/**/*.ts"],
}
